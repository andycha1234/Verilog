module smaller_counter_seg3 (Clock, Reset_n, Q, E);
parameter n = 4;
parameter k = 20;

input Clock, Reset_n;

output [n-1:0] Q;

reg [n-1:0] Q;
reg rollover

always @(posedge Clock, negedge Reset_n) begin
	if (!Reset_n) begin
		Q <= 0;
		rollover <= 0;
	end
	else begin
		if(E == 1 && rollover == 2) begin
			if(Q == (k-1)) begin
				Q <= 0;
				rollover <= rollover + 1;
			end
			else
				Q <= Q + 1;
		end
	end
end

endmodule